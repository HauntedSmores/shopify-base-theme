{
  "name": "vpv-shopify",
  "version": "1.0.0",
  "description": "Verbal + Visual - Shopify base theme",
  "main": "webpack.config.js",
  "scripts": {
    "build": "rm -rf dist/* && webpack",
    "dev": "concurrently -n \"webpack,theme\" -c \"cyanfe,green\" \"webpack --watch\" \"shopify-themekit watch -d dist\" --kill-others",
    "deploy": "rm -rf dist/* && webpack && shopify-themekit replace -d dist -e production"
  },
  "author": "V+V",
  "license": "ISC",
  "devDependencies": {
    "@shopify/themekit": "^0.6.12",
    "concurrently": "^3.5.0",
    "copy-webpack-plugin": "^4.2.0",
    "css-loader": "^0.28.7",
    "extract-text-webpack-plugin": "^3.0.2",
    "node-sass": "^4.6.0",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.0",
    "webpack": "^3.8.1"
  },
  "dependencies": {}
}
