{
    "name": "vpv-shopify",
    "version": "1.0.0",
    "description": "Verbal + Visual - Shopify base theme",
    "main": "webpack.config.js",
    "scripts": {
        "build": "rm -rf dist/* && webpack --env.production",
        "dev": "rm -rf dist/* && concurrently -n \"WEBPACK,THEME,SYNC\" -c \"cyan.bold,green.bold,magenta.bold\" \"webpack --watch --env.production=false\" \"shopify-themekit watch -n theme.update\" \"browser-sync start -c bs-config.js\"",
        "deploy": "rm -rf dist/* && webpack --env.production && shopify-themekit replace -e production",
        "webpack-watch": "rm -rf dist/* && concurrently -n \"webpack\" -c \"cyan\" \"webpack --watch --env.production=false\" \"browser-sync start -c bs-config.js\" --kill-others",
        "theme-watch": "shopify-themekit watch -n theme.update"
    },
    "author": "V+V",
    "license": "ISC",
    "devDependencies": {
        "@shopify/themekit": "^0.6.12",
        "babel-core": "^6.26.0",
        "babel-loader": "^7.1.2",
        "babel-preset-env": "^1.6.1",
        "browser-sync": "^2.18.13",
        "concurrently": "^3.5.0",
        "copy-webpack-plugin": "^4.2.0",
        "extract-text-webpack-plugin": "^3.0.2",
        "node-sass": "^4.6.0",
        "raw-loader": "^0.5.1",
        "sass-loader": "^6.0.6",
        "webpack": "^3.8.1"
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not ie <= 8"
    ]
}
