/*================ Sizing Variables ================*/
$width-site: 1280px;
/*============================================================================
  Grid Breakpoints and Class Names
    - Do not change the variable names
==============================================================================*/
// set gutter size
$gutter: 12px;
// set grid size
$number-of-columns: 12;
// breakpoints
$xs-max: 479px;
$sm-break: 480px;
$sm-max: 767px;
$md-break: 768px;
$md-max: 1279px;
$lg-break: 1280px;

/*================ Color Variables ================*/
// Colors
// Brand Palette
$blue: #3d70b2;
$light-blue: #5596e6;
$white: #fff;
// UI Palette
$off-white: #f5f7fa;
$light-grey: #f0f3f6;
$grey: #dfe3e6;
$dark-grey: #8c9ba5 ;
$black: #152934;
$carbon: #5a6872;
// Supportive Palette
$green: #26A69A;
$gold: #EFC100;
$red: #EF5350;

// $color-primary: {{ settings.color_primary }};
$color-primary: $blue;

// Text colors
// $color-body-text: {{ settings.color_body_text }};
$color-body-text: $black;

// $font-size-base: {{ settings.type_base_size }};
$font-size-base: 16px;


// Backgrounds
$color-body: $off-white;

// Border colors
$color-border: #f6f6f6;

// Helper colors for form error states
$color-disabled: #000;
$color-disabled-border: #000;
$color-error: #000;
$color-error-bg: #000;
$color-success: #000;
$color-success-bg: #000;

/*================ Typography Variables ================*/
$font-weight-light: 300; 
$font-weight-normal: 400;
$font-weight-bold: 700;

/*================ Z-Index ================*/
$z-index-dropdown: 2;
$z-index-skip-to-content: 10000;

/*================ SVG ================*/
$svg-select-icon: #{'{{ "ico-select.svg" | asset_url }}'};

/*================ Icon Size ================*/

$icon-standard-height: 36px;
$icon-standard-width: 36px;

$icon-large-height: 72px;
$icon-large-width: 72px;
